@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-12">
        <div class="jumbotron bg-primary text-white rounded p-4 mb-4">
            <h1 class="display-4">
                <i class="fas fa-graduation-cap me-3"></i>Educational Management System
            </h1>
            <p class="lead">Manage your educational institution with ease. Track students, semesters, modules, chapters, and activities all in one place.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Students</h5>
                <p class="card-text">Manage student information and enrollment.</p>
                <a asp-page="/Students/Index" class="btn btn-primary">
                    <i class="fas fa-arrow-right me-1"></i>Manage Students
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-calendar-alt fa-3x text-success mb-3"></i>
                <h5 class="card-title">Semesters</h5>
                <p class="card-text">Organize academic periods and terms.</p>
                <a asp-page="/Semesters/Index" class="btn btn-success">
                    <i class="fas fa-arrow-right me-1"></i>Manage Semesters
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-book fa-3x text-info mb-3"></i>
                <h5 class="card-title">Modules</h5>
                <p class="card-text">Create and manage course modules.</p>
                <a asp-page="/Modules/Index" class="btn btn-info">
                    <i class="fas fa-arrow-right me-1"></i>Manage Modules
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-file-alt fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Chapters</h5>
                <p class="card-text">Organize course content into chapters.</p>
                <a asp-page="/Chapters/Index" class="btn btn-warning">
                    <i class="fas fa-arrow-right me-1"></i>Manage Chapters
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-tasks fa-3x text-danger mb-3"></i>
                <h5 class="card-title">Activities</h5>
                <p class="card-text">Create TP and TD activities for chapters.</p>
                <a asp-page="/Activities/Index" class="btn btn-danger">
                    <i class="fas fa-arrow-right me-1"></i>Manage Activities
                </a>
            </div>
        </div>
    </div>
    
</div>
